           <br>
           <form action="/admin/orderUpdate?id=<%= order._id %>" method="POST" style="width: 100%; text-align: center; padding: 20px;">
            <h4>Update Order Status</h4><br>
            <div style="display: flex; justify-content: center; gap: 20px; margin-bottom: 20px;">
              
              <% if(orderStatus!== 'Cancelled' && orderStatus!== 'Returned' ){ %>
              <label style="display: flex; align-items: center; gap: 10px; font-size: 16px; padding: 10px; background-color: #f0f0f0; border-radius: 10px;">
                <input type="radio" name="choice" value="Pending" 
                <% if (orderStatus === 'Pending') { %> checked <% } %>> Pending
              </label>
          
              <label style="display: flex; align-items: center; gap: 10px; font-size: 16px; padding: 10px; background-color: #f0f0f0; border-radius: 10px;">
                <input type="radio" name="choice" value="Shipped" 
                <% if (orderStatus === 'Shipped') { %> checked <% } %>> Shipped
              </label>
          
              <label style="display: flex; align-items: center; gap: 10px; font-size: 16px; padding: 10px; background-color: #f0f0f0; border-radius: 10px;">
                <input type="radio" name="choice" value="Delivered" 
                <% if (orderStatus === 'Delivered') { %> checked <% } %>> Delivered
              </label>
          
              
              
              <% } %>
              <% if(orderStatus == 'Returned'){ %>
              <label style="display: flex; align-items: center; gap: 10px; font-size: 16px; padding: 10px; background-color: #f0f0f0; border-radius: 10px;">
                <input type="radio" name="choice" value="Returned" 
                <% if (orderStatus === 'Returned') { %> checked <% } %>> Returned
              </label>
              <% } %>
              <% if(orderStatus !== 'Returned'){ %>
              <label style="display: flex; align-items: center; gap: 10px; font-size: 16px; padding: 10px; background-color: #f0f0f0; border-radius: 10px;">
                <input type="radio" name="choice" value="Cancelled" 
                <% if (orderStatus === 'Cancelled') { %> checked <% } %>> Cancelled
              </label>
              <% } %>
            </div>
            <% if(orderStatus!== 'Cancelled' && orderStatus!== 'Returned'){ %>
            <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px;">Submit</button>
         <% } %>
          </form>
          <% if(orderStatus == 'Returned'){ %>
                  <P style="text-align: center;font-size: large;">Return Reason : <%= order.returnReason %></P>
           <% } %>   
              

              <!-- table-responsive.// -->
            </div>
          </div>
