                            <hp class="mb-1"><%= order.billingDetails.name %></p    >
                            <p class="mb-1">
                                <%= order.billingDetails.email %> <br>
                                    <%= order.billingDetails.phone %> <br>
                                    
                            </p>
                        </div>
                    </article>
                </div>


                  <div class="col-md-4">
                    <article class="icontext align-items-start">
                        <div class="text">
                            <h6 class="mb-1">Deliver to</h6>
                            <p class="mb-1">
                         
                                <%= order.billingDetails.phno %>
                         
                                <br><%= order.billingDetails.address %>
                                <br><%= order.billingDetails.pincode %>
                                <br><%= order.billingDetails.city %>
                                <br><%= order.billingDetails.state%>
                                <br><%= order.billingDetails.country %>           
                              
                            </p>
                        </div>
