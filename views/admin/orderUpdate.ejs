                                <th style="text-align: center;" width="20%">Price</th>
                                <th style="text-align: center;" width="20%">Quantity</th>
                                <th style="text-align: center;" width="20%">Total</th>
                                                                                                                                                                                                                                                                          </th>
                            </tr>
                        </thead>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let j=0; j < order.items.length; j++) { %>
                        <tr>
                            <td>
                               
                                    <div class="left d-content-center" style="display: flex; justify-content: center; align-items: center;">
                                        <img src="/public/product_images/<%= order.items[j].product.images[0] %>" 
                                             width="50" height="50" class="img-xs" alt="Item">
                                    </div>
                               
                            </td>
                            <td style="text-align: center;">
                                <%= order.items[j].product.price %>
                            </td>
                            <td style="text-align: center;">
                                <%= order.items[j].quantity %>
                            </td>
                            <td style="text-align: center;">
