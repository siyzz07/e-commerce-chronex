    <script>
      function validateForm() {
          let isValid = true;
      
          // Coupon code validation (alphanumeric)
          const code = document.getElementById('code').value;
          const codeError = document.getElementById('code-error');
          const codeRegex = /^[a-zA-Z0-9]+$/;
          if (!code || !codeRegex.test(code)) {
              codeError.textContent = "Coupon code must contain only alphabets and numbers.";
              codeError.style.display = 'block';
              isValid = false;
          } else {
              codeError.style.display = 'none';
          }
      
          // Description validation (required)
          const description = document.getElementById('description').value;
          const descriptionError = document.getElementById('description-error');
          if (!description) {
              descriptionError.textContent = "Description is required.";
              descriptionError.style.display = 'block';
              isValid = false;
          } else {
              descriptionError.style.display = 'none';
          }
      
          // Discount validation (0-100)
          const discount = document.getElementById('discount').value;
          const discountError = document.getElementById('discount-error');
          if (!discount || discount < 0 || discount > 100) {
              discountError.textContent = "Discount must be between 0 and 100.";
              discountError.style.display = 'block';
              isValid = false;
          } else {
              discountError.style.display = 'none';
          }
      
          // Minimum amount validation (positive number)
          const min = document.getElementById('min').value;
          const minError = document.getElementById('min-error');
          if (!min || min <= 0) {
              minError.textContent = "Minimum amount must be a positive number.";
              minError.style.display = 'block';
              isValid = false;
          } else {
              minError.style.display = 'none';
          }
      
          // Expiry date validation (greater than today)
          const date = document.getElementById('date').value;
          const dateError = document.getElementById('date-error');
          const today = new Date().toISOString().split('T')[0];
          if (!date || date <= today) {
              dateError.textContent = "Expiry date must be greater than today.";
              dateError.style.display = 'block';
              isValid = false;
          } else {
              dateError.style.display = 'none';
          }
      
          return isValid;
      }
      </script>
      




