    <script>
        let dates = <%- JSON.stringify(dailyreport) %>; 
        let sales = <%- JSON.stringify(weeklyreport) %>; 
    
        // Create the chart
        const ctx = document.getElementById('salesChart').getContext('2d');
        const salesChart = new Chart(ctx, {
            type: 'bar', 
            data: {
                labels: dates, 
                datasets: [{
                    label: ' Sales',
                    data: sales, 
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: '#088178',
                    fill: true,
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: ' Sales Data'
                    }
                },
                scales: {
                    x: {
                        type: 'category', 
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    
        function selectChange() {
            const value = document.getElementById("option").value;
    
            switch (value) {
                case "month":
                    dates = <%- JSON.stringify(months) %>; 
                    sales = <%- JSON.stringify(monthlyreport) %>; 
                    break;
    
                default: // "week"
                    dates = <%- JSON.stringify(dailyreport) %>; 
                    sales = <%- JSON.stringify(weeklyreport) %>; 
                    break;
            }
    
           
            salesChart.data.labels = dates; 
            salesChart.data.datasets[0].data = sales;
            salesChart.update(); 
        }
    </script>
    
    
    
    
    


    
