                                              <option value="<%= row._id %>" <% if (row._id.toString() == product.brandName._id.toString()) { %> selected <% } %>><%= row.brand %></option>
                                          <% }); %>
                                      </select>
                                      <span id="brand-error" class="error-message" style="color: red;"></span>
                                  </div>
                              </div>
                          </div>
      
