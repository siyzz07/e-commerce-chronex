      <section class="content-main">
        <div class="content-header">
          <h2 class="content-title">Coupen list</h2>
         
        </div>
        <P style="color: rgb(47, 215, 38); text-align: center;"><%# msg %></P>

        <div class="card mb-4">
          <header class="card-header">
            <div class="row gx-3">
              <div class="col-lg-4 col-md-6 me-auto">
                <input
                  type="text"
                  placeholder="Search..."
                  class="form-control"
                />
              </div>
              
              <div class="d-gridcol-lg-4 col-md-6 me-auto"> <a href="/admin/addCoupen">
                <button  class="btn btn-primary"><i class="icon material-icons md-add_box"></i>Add Coupen</button></a>
            </div>
            </div>
          </header>
          <!-- card-header end// -->
          <div class="card-body">
            <div class="table-responsive">

              <P style="color: red; text-align: center;"><%= fail %></P>
              <P style="color:green; text-align: center;"><%= msg %></P>
              <br>
              <table class="table table-hover">

                <thead>
                  <tr><Th style="text-align: center;">Coupen Code</Th>
                    <th style="text-align: center;">Description</th>
                    <th style="text-align: center;">discoutn (%)</th>
                    <th style="text-align: center;">Min Amount</th>
                    <th style="text-align: center;">Expiry Date</th>
                    <th style="text-align: center;">Status</th>
                    <th style="text-align: center;">Used Count</th>
                    <th style="text-align: center;" >Action</th>
                  </tr>

                </thead>
                <tbody id="tableDatas">
                  <% for(let i=0;i<coupen.length;i++){ %>
                  <tr>
                    <td style="text-align: center;"><%= coupen[i].coupenCode %></td>
                    <td style="text-align: center;"><%= coupen[i].description %></td>
                    <td style="text-align: center;"><%= coupen[i].discountPercentage%>%</td>
                    <td style="text-align: center;"><%= coupen[i].minAmountPurchase%></td>
                    <td style="text-align: center;"><%= coupen[i].expiryDate.toLocaleDateString() %></td>
                    <td style="text-align: center;">
                      <% if( coupen[i].expiryDate > new Date()){ %>
                        <span class="badge rounded-pill alert-success">Active</span>
                        <% }else{ %>
                          <span class="badge rounded-pill alert-danger">Expired</span>
                          <% } %>
                    </td>
                    <td style="text-align: center;"><%= coupen[i].usedCount%></td>
                  
                  
                    <td style="text-align: center;">
                      <a
                        href="javascript:void(0)"
                        onclick="showCustomAlert('<%= coupen[i]._id %>')"
                        class="btn bg-danger btn-sm btn-brand rounded font-sm mt-15"
                      >
                        Delete
                      </a>
                    </td>
                  </tr>
               <% } %>
               <div id="customAlert" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); background:#fff; padding:20px; border:1px solid #333; z-index:9999; border-radius:10px; box-shadow:0 0 15px rgba(0,0,0,0.3); width: 450px; height: 200px; text-align:center;">
                <p>Are you sure you want to delete the coupon?</p><br>
                <button id="confirmDelete" class="btn btn-danger" style="background-color:red;color:white;padding:10px;margin-right:10px;width: 77px;">Yes</button>
                <button onclick="closeCustomAlert()" class="btn btn-success" style="color:white;padding:10px;width: 77px;">No</button>
              </div>
                </tbody>
              </table>
              <!-- table-responsive.// -->
            </div>
          </div>
          <!-- card-body end// -->
