                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Orders Section -->
                            <div class="col-md-8">
                                <section class="content-main">
                              
                                        <div class="card">
                                            <header class="card-header">
                                                <h2 class="content-title card-title">Wallet</h2><br>
                                                <h5 class="content-title card-title">Name :<%=   %></h5>
                                                <h5 class="content-title card-title">Amount :<%= wallet.balance %></h5>
                                            </header>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th style="text-align: center;" >Date</th>
                                                                <th style="text-align: center;" >Amount</th>
                                                                <th style="text-align: center;" >Status</th>
                                                                <th style="text-align: center;" >Type</th>
                                                               
                                                               
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% for(let i=0 ;i<transaction.length;i++) {%>
                                                                <tr style="text-align: center;">
                                                                    <td> <%= transaction[i].date.toLocaleDateString() %></td>
                                                                    <td><%= transaction[i].amount  %></td>
                                                                
                                                                    <td ><%= transaction[i].status  %>  </td>
                                                                    <td ><%= transaction[i].type  %>   </td>
                                                                    
                                                                </tr>
                                                         <% } %>
                                                        </tbody>
                                                    </table>
