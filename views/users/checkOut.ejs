<script>


    document.getElementById('submitPayment').addEventListener('click', () => {
        const selectedOption = document.querySelector('input[name="payment_option"]:checked');
        const selectedAddress = document.querySelector('input[name="address"]:checked');
        const couponName = document.getElementById('couponNameInput') ? document.getElementById('couponNameInput').value.trim() : null;
        const amount = document.getElementById('totalWithDiscount').value;
    
        if (selectedOption && selectedAddress) {
            const paymentMethod = selectedOption.value;
            const address = selectedAddress.value;
            const productIds = Array.from(document.querySelectorAll('.product-id')).map(input => input.value);
    
            if (paymentMethod === 'Razorpay') {
                console.log("Starting Razorpay process...");
    
                // Create Razorpay order by calling the backend
                fetch('/createOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        amount,
                        productIds, 
                        address, 
                        couponName ,
                        payment_option: paymentMethod                                   
                    }),
                })
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return res.json();
                })
                .then(order => {
                    console.log("Order created successfully:", order);
    
            
                    var options = {
                     "key":razorpayKey,
                     "amount": order.amount,
                     "currency": "INR",
                     "name": "Chronex",
                     "description": "Test Transaction",
                     "order_id": order.id,
                     "handler": function (response) {
                   
                         fetch('/verifyPayment', {
                             method: 'POST',
                             headers: {
                                 'Content-Type': 'application/json',
                             },
                             body: JSON.stringify({
                                 razorpay_order_id: response.razorpay_order_id,
                                 razorpay_payment_id: response.razorpay_payment_id,
                                 razorpay_signature: response.razorpay_signature,
                                 payment_option: paymentMethod,
                                 address: address,
                                 productIds: productIds,
                                 couponName: couponName
                             }),
                         })
                         .then(res => res.json())
                         .then(data => {
                             if (data.success) {
                                 window.location.href = data.redirectUrl; 
                             } else {
                                 document.getElementById('wrong').textContent = 'Payment verification failed!';
                             }
                         });
                     },
                     "theme": {
                         "color": "#F37254"
                     },
                    
                     "modal": {
                         "ondismiss": function() {
                             console.log("Payment cancelled by the user.");

                            
                             fetch('/logOrderCancellation', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({
                                            status: "Order Cancelled",
                                            transactionStatus: "Pending",
                                            payment_option: paymentMethod,
                                            address: address,
                                            productIds: productIds,
                                            couponName: couponName
                                        }),
                                    })
                                    .then(res => res.json())
                                    .then(data => {
                                        if (data.success) {
                                            
                                            window.location.href = data.redirectUrl;
                                        } else {
                                            document.getElementById('wrong').textContent = 'Error logging cancellation!';
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        document.getElementById('wrong').textContent = 'Error logging cancellation!';
                                    });

                                
                         }
                     }
                };
                
                var rzp1 = new Razorpay(options);
                rzp1.open();

                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('wrong').textContent = 'Error creating Razorpay order!';
                });
            } else {
               
                fetch('/submit-payment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        payment_option: paymentMethod,
                        address: address,
                        productIds: productIds,
                        couponName: couponName
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = data.redirectUrl;
                    } else {
                        document.getElementById('wrong').textContent = 'Error placing order!';
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                    document.getElementById('wrong').textContent = 'Error placing order!';
                });
            }
        } else {
            document.getElementById('wrong').textContent = 'Invalid! Check your payment method and shipping address.';
        }
    });
    </script>
    






