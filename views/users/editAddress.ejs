    <script>
      const form = document.getElementById('addressForm');
    
      form.addEventListener('submit', function(event) {
          // Clear all previous errors
          document.querySelectorAll('.error').forEach(el => el.textContent = '');
  
          let isValid = true;
  
          // Get form field values
          const address = document.getElementById('address').value.trim();
          const pincode = document.getElementById('pincode').value.trim();
          const sphone = document.getElementById('sphone').value.trim();
          const country = document.getElementById('country').value.trim();
          const state = document.getElementById('state').value.trim();
          const city = document.getElementById('city').value.trim();
  
          // Validate Address (must be at least 5 characters)
          if (address.length < 5) {
              document.getElementById('addressError').textContent = 'Address must be at least 5 characters long';
              isValid = false;
          }
  
          // Validate Pincode (must be 4 digits)
          if (pincode.length !== 4 || isNaN(pincode)) {
              document.getElementById('pincodeError').textContent = 'Pincode must be exactly 4 digits';
              isValid = false;
          }
  
          // Validate Secondary Phone (must be exactly 10 digits and numeric)
          if (sphone.length !== 10 || isNaN(sphone)) {
              document.getElementById('sphoneError').textContent = 'Phone number must be exactly 10 digits';
              isValid = false;
          }
  
          // Validate Country
          if (country === '') {
              document.getElementById('countryError').textContent = 'Please enter your country';
              isValid = false;
          }
  
          // Validate State
          if (state === '') {
              document.getElementById('stateError').textContent = 'Please enter your state';
              isValid = false;
          }
  
          // Validate City
          if (city === '') {
              document.getElementById('cityError').textContent = 'Please enter your city';
              isValid = false;
          }
  
          // Prevent form submission if validation fails
          if (!isValid) {
              event.preventDefault();
          }
      });
  </script>
  
